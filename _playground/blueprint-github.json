{
    "$schema": "https://playground.wordpress.net/blueprint-schema.json",
    "landingPage": "/wp-admin/post.php?post=4&action=edit",
    "login": true,
    "features": {
        "networking": true
    },
    "steps": [
        {
            "step": "updateUserMeta",
            "meta": {
                "admin_color": "modern",
                "show_welcome_panel": 0
            },
            "userId": 1
        },
        {
            "step": "setSiteOptions",
            "options": {
                "blogname": "Wordpress Slider Block"
            }
        },
        {
            "step": "installPlugin",
            "pluginZipFile": {
                "resource": "url",
                "url": "https://github-proxy.com/proxy/?repo=lubusIN/blablablocks-slider-blockk&branch=demo"
            }
        },
        {
            "step": "importWxr",
            "file": {
                "resource": "url",
                "url": "https://raw.githubusercontent.com/lubusIN/blablablocks-slider-blockk/demo/_playground/demo-content.xml"
            }
        }
    ]
}