{
    "$schema": "https://playground.wordpress.net/blueprint-schema.json",
    "landingPage": "/wp-admin/post-new.php?post_type=page",
    "login": true,
    "features": {
        "networking": true
    },
    "steps": [
        {
            "step": "updateUserMeta",
            "meta": {
                "admin_color": "modern",
                "show_welcome_panel": 0
            },
            "userId": 1
        },
        {
            "step": "setSiteOptions",
            "options": {
                "blogname": "Wordpress Slider Block"
            }
        },
        {
            "step": "installPlugin",
            "pluginZipFile": {
                "resource": "url",
                "url": "https://github-proxy.com/proxy/?repo=lubusIN/wordpress-slider-block&branch=add/feat/playground-setup"
            }
        },
        {
            "step": "importWxr",
            "file": {
                "resource": "url",
                "url": "https://raw.githubusercontent.com/lubusIN/wordpress-slider-block/add/feat/playground-setup/_playground/demo-content.xml"
            }
        }
    ]
}